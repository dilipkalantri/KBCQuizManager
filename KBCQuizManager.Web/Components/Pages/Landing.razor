@page "/"
@layout EmptyLayout
@inject NavigationManager NavigationManager

<PageTitle>InternSpark - Quiz Management & Gaming Platform</PageTitle>

<MudThemeProvider IsDarkMode="true" />

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    body {
        font-family: 'Roboto', 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        overflow-x: hidden;
    }

    .landing-page {
        min-height: 100vh;
        background: linear-gradient(135deg, #0f172a 0%, #1e1b4b 30%, #0f172a 100%);
        position: relative;
        overflow-x: hidden;
    }

    /* Animated background particles */
    .bg-particles {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
        opacity: 0.3;
    }

    .particle {
        position: absolute;
        width: 4px;
        height: 4px;
        background: #7c3aed;
        border-radius: 50%;
        animation: float 20s infinite;
    }

    @@keyframes float {
        0%, 100% { transform: translateY(0) translateX(0); opacity: 0; }
        10% { opacity: 1; }
        90% { opacity: 1; }
        100% { transform: translateY(-100vh) translateX(100px); opacity: 0; }
    }

    .content-wrapper {
        position: relative;
        z-index: 1;
    }

    /* Navigation */
    .nav {
        padding: 20px 40px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        position: sticky;
        top: 0;
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(148, 163, 184, 0.1);
        z-index: 100;
    }

    .nav-logo {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
    }

    .nav-logo-img {
        width: 40px;
        height: 40px;
        border-radius: 10px;
        overflow: hidden;
    }

    .nav-logo-text {
        color: white;
        font-size: 20px;
        font-weight: 700;
        background: linear-gradient(135deg, #c084fc, #818cf8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
    }

    .nav-links {
        display: flex;
        gap: 24px;
        align-items: center;
    }

    .nav-link {
        color: #94a3b8;
        text-decoration: none;
        font-size: 15px;
        transition: color 0.3s;
    }

    .nav-link:hover {
        color: #818cf8;
    }

    .nav-btn {
        background: linear-gradient(135deg, #7c3aed, #a855f7);
        color: white;
        padding: 10px 24px;
        border-radius: 8px;
        text-decoration: none;
        font-weight: 600;
        transition: transform 0.2s, box-shadow 0.2s;
    }

    .nav-btn:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(124, 58, 237, 0.3);
    }

    /* Hero Section */
    .hero {
        padding: 100px 40px 80px;
        text-align: center;
        max-width: 1200px;
        margin: 0 auto;
    }

    .hero-logo {
        width: 120px;
        height: 120px;
        margin: 0 auto 30px;
        border-radius: 30px;
        overflow: hidden;
        box-shadow: 0 30px 80px rgba(124, 58, 237, 0.4);
        animation: pulse-glow 3s ease-in-out infinite;
    }

    @@keyframes pulse-glow {
        0%, 100% { box-shadow: 0 30px 80px rgba(124, 58, 237, 0.4); }
        50% { box-shadow: 0 30px 100px rgba(124, 58, 237, 0.6); }
    }

    .hero-title {
        font-size: 4rem;
        font-weight: 900;
        margin: 0 0 20px;
        background: linear-gradient(135deg, #c084fc, #818cf8, #a78bfa);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        line-height: 1.1;
    }

    .hero-subtitle {
        font-size: 1.5rem;
        color: #94a3b8;
        margin: 0 0 40px;
        max-width: 700px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.6;
    }

    .hero-description {
        font-size: 1.1rem;
        color: #64748b;
        margin: 0 0 50px;
        max-width: 800px;
        margin-left: auto;
        margin-right: auto;
        line-height: 1.8;
    }

    .hero-cta {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 80px;
    }

    .btn-primary {
        background: linear-gradient(135deg, #7c3aed, #a855f7);
        color: white;
        padding: 16px 32px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
        border: none;
        cursor: pointer;
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-primary:hover {
        transform: translateY(-3px);
        box-shadow: 0 20px 40px rgba(124, 58, 237, 0.4);
    }

    .btn-secondary {
        background: rgba(30, 41, 59, 0.8);
        color: white;
        padding: 16px 32px;
        border-radius: 12px;
        text-decoration: none;
        font-weight: 600;
        font-size: 1.1rem;
        transition: all 0.3s;
        border: 2px solid rgba(148, 163, 184, 0.3);
        display: inline-flex;
        align-items: center;
        gap: 8px;
    }

    .btn-secondary:hover {
        border-color: #7c3aed;
        background: rgba(30, 41, 59, 0.95);
        transform: translateY(-3px);
    }

    /* Features Section */
    .section {
        padding: 100px 40px;
        max-width: 1200px;
        margin: 0 auto;
    }

    .section-title {
        font-size: 2.5rem;
        font-weight: 800;
        color: white;
        text-align: center;
        margin: 0 0 20px;
    }

    .section-subtitle {
        font-size: 1.2rem;
        color: #94a3b8;
        text-align: center;
        margin: 0 0 60px;
        max-width: 600px;
        margin-left: auto;
        margin-right: auto;
    }

    .features-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 30px;
        margin-top: 60px;
    }

    .feature-card {
        background: rgba(30, 41, 59, 0.6);
        border: 1px solid rgba(148, 163, 184, 0.15);
        border-radius: 20px;
        padding: 40px 30px;
        text-align: center;
        transition: all 0.3s;
        backdrop-filter: blur(10px);
    }

    .feature-card:hover {
        transform: translateY(-8px);
        border-color: #7c3aed;
        box-shadow: 0 20px 60px rgba(124, 58, 237, 0.2);
        background: rgba(30, 41, 59, 0.8);
    }

    .feature-icon {
        width: 80px;
        height: 80px;
        border-radius: 20px;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto 24px;
        font-size: 40px;
        background: linear-gradient(135deg, #7c3aed, #a855f7);
    }

    .feature-title {
        font-size: 1.5rem;
        font-weight: 700;
        color: white;
        margin: 0 0 12px;
    }

    .feature-desc {
        font-size: 1rem;
        color: #94a3b8;
        line-height: 1.6;
        margin: 0;
    }

    /* How It Works */
    .how-it-works {
        background: rgba(15, 23, 42, 0.5);
        border-radius: 30px;
        padding: 80px 40px;
        margin: 60px 0;
    }

    .steps {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 40px;
        margin-top: 60px;
    }

    .step {
        text-align: center;
        position: relative;
    }

    .step-number {
        width: 60px;
        height: 60px;
        border-radius: 50%;
        background: linear-gradient(135deg, #7c3aed, #a855f7);
        color: white;
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 24px;
        font-weight: 700;
        margin: 0 auto 20px;
    }

    .step-title {
        font-size: 1.3rem;
        font-weight: 700;
        color: white;
        margin: 0 0 12px;
    }

    .step-desc {
        font-size: 1rem;
        color: #94a3b8;
        line-height: 1.6;
        margin: 0;
    }

    /* Stats Section */
    .stats {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 30px;
        margin: 60px 0;
    }

    .stat-card {
        background: rgba(30, 41, 59, 0.6);
        border: 1px solid rgba(148, 163, 184, 0.15);
        border-radius: 16px;
        padding: 30px;
        text-align: center;
        backdrop-filter: blur(10px);
    }

    .stat-number {
        font-size: 3rem;
        font-weight: 800;
        background: linear-gradient(135deg, #c084fc, #818cf8);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        background-clip: text;
        margin: 0 0 8px;
    }

    .stat-label {
        font-size: 1rem;
        color: #94a3b8;
        margin: 0;
    }

    /* Footer */
    .footer {
        padding: 60px 40px 40px;
        text-align: center;
        border-top: 1px solid rgba(148, 163, 184, 0.1);
        margin-top: 100px;
    }

    .footer-content {
        max-width: 1200px;
        margin: 0 auto;
    }

    .footer-logo {
        width: 60px;
        height: 60px;
        margin: 0 auto 20px;
        border-radius: 15px;
        overflow: hidden;
    }

    .footer-text {
        color: #64748b;
        font-size: 0.9rem;
        margin: 20px 0;
    }

    .footer-links {
        display: flex;
        justify-content: center;
        gap: 30px;
        margin: 30px 0;
        flex-wrap: wrap;
    }

    .footer-link {
        color: #818cf8;
        text-decoration: none;
        font-size: 0.9rem;
        transition: color 0.3s;
    }

    .footer-link:hover {
        color: #c084fc;
    }

    /* Association Section */
    .association-section {
        background: white;
        border-top: 1px solid rgba(148, 163, 184, 0.2);
        border-bottom: 1px solid rgba(148, 163, 184, 0.2);
        padding: 40px 40px;
        text-align: center;
        margin: 0;
    }

    .association-text {
        color: #64748b;
        font-size: 0.85rem;
        margin: 0 0 20px;
        text-transform: uppercase;
        letter-spacing: 2px;
        font-weight: 600;
    }

    .association-logo {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .association-logo img {
        max-width: 350px;
        width: 100%;
        height: auto;
    }

    /* Responsive */
    @@media (max-width: 768px) {
        .nav {
            padding: 15px 20px;
        }

        .nav-links {
            gap: 12px;
        }

        .nav-link {
            font-size: 13px;
        }

        .nav-btn {
            padding: 8px 16px;
            font-size: 13px;
        }

        .hero {
            padding: 60px 20px 50px;
        }

        .hero-title {
            font-size: 2.5rem;
        }

        .hero-subtitle {
            font-size: 1.2rem;
        }

        .hero-description {
            font-size: 1rem;
        }

        .section {
            padding: 60px 20px;
        }

        .section-title {
            font-size: 2rem;
        }

        .features-grid {
            grid-template-columns: 1fr;
            gap: 20px;
        }

        .steps {
            grid-template-columns: 1fr;
            gap: 30px;
        }

        .stats {
            grid-template-columns: repeat(2, 1fr);
            gap: 15px;
        }

        .association-section {
            padding: 30px 20px;
        }

        .association-text {
            font-size: 0.75rem;
            letter-spacing: 1.5px;
            margin: 0 0 15px;
            color: #475569;
        }

        .association-logo img {
            max-width: 280px;
        }

        .nav-logo-text {
            font-size: 16px;
        }

        .nav-logo-img {
            width: 32px;
            height: 32px;
        }
    }

    @@media (max-width: 480px) {
        .association-section {
            padding: 25px 15px;
        }

        .association-text {
            font-size: 0.7rem;
            letter-spacing: 1px;
            margin: 0 0 12px;
            color: #475569;
        }

        .association-logo img {
            max-width: 220px;
        }

        .nav {
            padding: 12px 15px;
        }

        .nav-links {
            gap: 8px;
        }

        .nav-link {
            font-size: 12px;
        }

        .nav-link.hide-mobile {
            display: none;
        }

        .nav-btn {
            padding: 6px 12px;
            font-size: 12px;
        }
    }
</style>

